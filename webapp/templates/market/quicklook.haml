- extends "base.haml"
- load humanize
- load custom_filters
- block title
  element43 - Market - {{type.name}}
- block content
  - include 'market/_group_breadcrumbs.haml'
  %h1
    = type.name
  .row
    .span2
      %img{'src':'http://image.eveonline.com/type/{{type.id}}_64.png', 'alt':'type image'}
    .span9
      %p
        Volume: {{type.volume|intcomma}}m&#179;
      %p
        = type.description
    .span5
      %h3{'style':'margin-bottom:0.4em;'}
        Filters
      %span#slider-label
        Lowest security status: 0.0
      #slider
      %p
  %ul#tabs.nav.nav-tabs
    %li.active
      %a{'href':'#regions', 'data_toggle':'tab'} Regions
    %li
      %a{'href':'#buy', 'data_toggle':'tab'} Buy
    %li
      %a{'href':'#sell', 'data_toggle':'tab'} Sell
  .tab-content
    #buy.tab-pane.fade
      %h3
        Buy
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th
              Location
            %th
              Remaining
            %th
              Price
            %th
              Last Seen
            %th
              ID
        %tbody
          - for order in buy_orders
            %tr
              %td
                %span{'class':'sec{{order.mapsolarsystem.security_level|sec0to10}}'}
                  • {{order.mapsolarsystem.security_level|sec0to1}}
                %a{'href':'/marketsystemdetail/{{type.id}}/{{region.8}}/'}
                  {{order.mapregion.name}}
                \- 
                = order.stastation.name
              %td
                = order.volume_remaining|intcomma
              %td{'align':'right'}
                = order.price|floatformat:"2"|intcomma
              %td
                = order.generated_at|naturaltime
              %td
                = order.id
    #sell.tab-pane.fade
      %h3
        Sell
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th
              Location
            %th
              Remaining
            %th
              Price
            %th
              Last Seen
            %th
              ID
        %tbody
          - for order in sell_orders
            %tr
              %td
                %span{'class':'sec{{order.mapsolarsystem.security_level|sec0to10}}'}
                  • {{order.mapsolarsystem.security_level|sec0to1}}
                %a{'href':'/marketsystemdetail/{{type.id}}/{{region.8}}/'}
                  {{order.mapregion.name}}
                \- 
                = order.stastation.name
              %td
                = order.volume_remaining|intcomma
              %td{'align':'right'}
                = order.price|floatformat:"2"|intcomma
              %td
                = order.generated_at|naturaltime
              %td
                = order.id
    #regions.tab-pane.fade.active.in
      %h3 Regions
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th
              Region
            %th
            %th
              Low
            %th
              High
            %th
              Avg
            %th
              Median
            %th
              Standard Deviation
            %th
              Lots
            %th
              Volume
        %tbody
        - for region in regions
            %tr
              %td
                %a{'href':'/marketsystemdetail/{{type.id}}/{{region.8}}/'}
                    = region.0
              %td
                Bid
              %td
                = region.1|intcomma
              %td
                = region.2|intcomma
              %td
                = region.3|intcomma
              %td
                = region.4|intcomma
              %td
                = region.5|intcomma
              %td
                = region.6|intcomma
              %td
                = region.7|intcomma
            %tr
              %td
              %td
                Ask
              %td
                = region.9|intcomma
              %td
                = region.10|intcomma
              %td
                = region.11|intcomma
              %td
                = region.12|intcomma
              %td
                = region.13|intcomma
              %td
                = region.14|intcomma
              %td
                = region.15|intcomma

  - block scripts
    %script{'type':'text/javascript', 'src':'http://code.jquery.com/ui/1.8.22/jquery-ui.min.js'}
    %script{'type':'text/javascript', 'src':'/static/javascripts/jquery.pulse.js'}
    %script{'type':'text/javascript', 'src':'/static/javascripts/quicklook.js'}