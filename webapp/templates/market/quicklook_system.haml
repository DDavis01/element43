- extends "base.haml"
- load humanize
- load custom_filters
- block title
  element43 - Market - {{type.name}}
- block content
  - include 'market/_group_breadcrumbs.haml'
  %h1
    = type.name
  .row
    .span2
      %img{'src':'http://image.eveonline.com/type/{{type.id}}_64.png', 'alt':'type image'}
    .span9
      %p
        Volume: {{type.volume|intcomma}}m&#179;
      %p
        = type.description
  %ul#tabs.nav.nav-tabs
    %li.active
      %a{'href':'#systems', 'data_toggle':'tab'} Systems
    %li
      %a{'href':'#buy', 'data_toggle':'tab'} Buy
    %li
      %a{'href':'#sell', 'data_toggle':'tab'} Sell
  .tab-content
    #buy.tab-pane.fade
      %h3
        Buy
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th
              Location
            %th
              Remaining
            %th
              Price
            %th
              Last Seen
            %th
              ID
        %tbody
          - for order in buy_orders
            %tr
              %td
                %span{'class':'sec{{order.mapsolarsystem.security_level|sec0to10}}'}
                  • {{order.mapsolarsystem.security_level|sec0to1}}
                {{order.mapregion.name}} -
                = order.stastation.name
              %td
                = order.volume_remaining|intcomma
              %td{'align':'right'}
                = order.price|floatformat:"2"|intcomma
              %td
                = order.generated_at|naturaltime
              %td
                = order.id
    #sell.tab-pane.fade
      %h3
        Sell
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th
              Location
            %th
              Remaining
            %th
              Price
            %th
              Last Seen
            %th
              ID
        %tbody
          - for order in sell_orders
            %tr
              %td
                %span{'class':'sec{{order.mapsolarsystem.security_level|sec0to10}}'}
                  • {{order.mapsolarsystem.security_level|sec0to1}}
                {{order.mapregion.name}} -
                = order.stastation.name
              %td
                = order.volume_remaining|intcomma
              %td{'align':'right'}
                = order.price|floatformat:"2"|intcomma
              %td
                = order.generated_at|naturaltime
              %td
                = order.id
    #systems.tab-pane.fade.active.in
      %h3 Systems
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th
              System
            %th
            %th
              Low
            %th
              High
            %th
              Avg
            %th
              Median
            %th
              Standard Deviation
            %th
              Lots
            %th
              Volume
        %tbody
        - for system in systems
            %tr
              %td
                = system.0
              %td
                Bid
              %td
                = system.1|intcomma
              %td
                = system.2|intcomma
              %td
                = system.3|intcomma
              %td
                = system.4|intcomma
              %td
                = system.5|intcomma
              %td
                = system.6|intcomma
              %td
                = system.7|intcomma
            %tr
              %td
              %td
                Ask
              %td
                = system.8|intcomma
              %td
                = system.9|intcomma
              %td
                = system.10|intcomma
              %td
                = system.11|intcomma
              %td
                = system.12|intcomma
              %td
                = system.13|intcomma
              %td
                = system.14|intcomma