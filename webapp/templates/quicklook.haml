- extends "base.haml"
- load humanize
- load custom_filters
- block title
  element43 - Market - {{type.name}}
- block content
  %h1
    = type.name
  .row
    .span2
      %img{'src':'http://image.eveonline.com/type/{{type.id}}_64.png', 'alt':'type image'}
    .span6
      %p
        Volume: {{type.volume}}m&#179;
      %p
        = type.description
  %ul#tabs.nav.nav-tabs
    %li.active
      %a{'href':'#orders', 'data_toggle':'tab'} Orders
    %li
      %a{'href':'#regions', 'data_toggle':'tab'} Regions
  .tab-content
    #orders.tab-pane.fade.active.in
      %h3
        Sell
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th
              Location
            %th
              Remaining
            %th
              Price
            %th
              Last Seen
            %th
              ID
        %tbody
          - for order in sell_orders
            %tr
              %td
                %span{'class':'sec{{order.mapsolarsystem.security_level|sec0to10}}'}
                  • {{order.mapsolarsystem.security_level|sec0to1}}
                {{order.mapregion.name}} -
                = order.stastation.name
              %td
                = order.volume_remaining
              %td
                = order.price
              %td
                = order.generated_at|naturaltime
              %td
                = order.id
      %h3
        Buy
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th
              Location
            %th
              Remaining
            %th
              Price
            %th
              Last Seen
            %th
              ID
        %tbody
          - for order in buy_orders
            %tr
              %td
                %span{'class':'sec{{order.mapsolarsystem.security_level|sec0to10}}'}
                  • {{order.mapsolarsystem.security_level|sec0to1}}
                {{order.mapregion.name}} -
                = order.stastation.name
              %td
                = order.volume_remaining
              %td
                = order.price
              %td
                = order.generated_at|naturaltime
              %td
                = order.id
