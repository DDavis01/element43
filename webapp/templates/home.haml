         - for item in typestats
           %tr
             %td
             %td
             %td
             %td
    .span4
      %h3 Platform Stats
      %table.table.table-striped.table-condensed
        %tbody
          %tr
            %td
              Active Orders
            %td
          %tr
            %td
              Archived Orders
            %td
          %tr
            %td
              History Records
            %td
      %h3 EMDR Stats (per minute)
      %table.table.table-striped.table-condensed
        %tbody
          %tr
            %td
              New Orders
            %td
          %tr  
            %td
              Updated Orders
            %td
          %tr
            %td
              Old Orders
            %td  
          %tr
