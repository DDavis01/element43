- extends "base.haml"
- load custom_filters
- block title
  element43 - {{user.username}} - Settings
- block content
  %h1
    {{user.username}}
  .row
    .span2
      %ul.nav.nav-tabs.nav-stacked
        %li
          %a{'href':'/settings/profile/'}
            Modify Profile
        %li.active
          %a{'href':'/settings/characters/'}
            Manage Characters  
        %li
          %a{'href':'/settings/api/key/'}
            Manage API Keys
    .span9
      %table.table.table-striped
        %tbody
          - for char in characters
            %tr
              %td
                %img{'src':'http://image.eveonline.com/Character/{{char.id}}_32.jpg'}
              %td
                = char.name
              %td.text-right
                %a{'href':'/settings/characters/remove/{{char.id}}/'}
                  .btn.btn-danger
                    Remove

            
            
      